[flake8]
max-line-length = 100
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .env,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .coverage,
    reports/,
    ground_truth/
max-complexity = 10
ignore = 
    E203,
    W503,
    E501,
    F401,
    F403,
    F405
per-file-ignores =
    __init__.py:F401
    tests/*:F401,F403
